<p id="notice"><%= notice %></p>

<h1>
  <%= @question.text %>
</h1>
<%= form_tag("/polls/results") do %>
  <% @choices.each do |choice| %>
    <p>
      <%= radio_button_tag :choice_id, choice.id, false %>
      <b class="choice"><%= choice.text %></b>
    </p>
  <% end %>
  <div><%= submit_tag 'Vote' %></div>
<% end %>  
